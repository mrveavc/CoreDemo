@model IEnumerable<EntityLayer.Concrete.Comment>



<div class="comment-top">
	<h3>Yorumlar</h3>
	


	@if(Model.Count() == 0){
		<br />
        <h4>Bu blogta henüz yorum yapılmadı. İlk yorumu siz yazın.</h4>
    }else{
		@foreach (var item in Model)
		{		
		
			<div class="media">
			

				<img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">@item.CommentUserName</h5>
					<p>
						@item.CommentContent
					</p>

			
				</div>
		
			</div>
		}
	}
	</div>
