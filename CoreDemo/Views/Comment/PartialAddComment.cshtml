<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
<form id="commentForm" method="post" action="/Comment/PartialAddComment/">
    <input type="hidden" id="blogID" name="BlogID" value="@ViewBag.BlogId" />
    <input class="form-control" type="text" id="txtusername" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
    <input class="form-control" type="text" id="txttitle" name="CommentTitle" placeholder="Konu" required="">
    <textarea class="form-control" id="txtcontent" name="CommentContent" placeholder="Yorumunuz....." required=""></textarea>
    <button type="submit" class="btn btn-primary submit" id="comment">Yorum Yap</button>
</form>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<script type="text/javascript">

    $("#commentForm").submit(function (e) {
        e.preventDefault();  // Formun normal submitini engelle

        let values = {
            CommentUserName: $("#txtusername").val(),
            CommentTitle: $("#txttitle").val(),
            CommentContent: $("#txtcontent").val(),
            BlogID: $("#blogID").val()
        };

        $.ajax({
            type: "POST",
            url: $(this).attr('action'), // formun action URL'si
            data: values,
            success: function (response) {

              
                $("#commentForm")[0].reset();
            },
            error: function () {
                alert("Yorum gönderilirken hata oluştu!");
            }
        });
    });
    </script> 